{
	"plugins": ["stylelint-order"],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"if",
					"for",
					"else",
					"each",
					"mixin",
					"extend",
					"include",
					"content",
					"return",
					"at-root",
					"function"
				]
			}
		],
		"order/order": [
			"dollar-variables",
			"custom-properties",
			"declarations",
			"rules"
		],
		"indentation": "tab"
	},
	"extends": ["stylelint-logical-order"]
}
